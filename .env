# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
EMERGENCY_SECRET=your-emergency-override-key-change-in-production
TOKEN_EXPIRY=1h
EMERGENCY_TOKEN_EXPIRY=15m

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=Ally AI <your-email@gmail.com>

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PREFIX=ally_soul_

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ally_soul
MONGODB_USER=
MONGODB_PASS=

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=15m
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Emergency Settings
NOTIFY_ADMIN_ON_EXCESSIVE_EMERGENCY=true
EMERGENCY_COOLDOWN=5m
MAX_EMERGENCY_REQUESTS=3
EMERGENCY_CONTACT_EMAIL=emergency@yourdomain.com

# AI Model Settings
TEXT_MODEL_PATH=./models/text-emotion
VOICE_MODEL_PATH=./models/voice-emotion
VIDEO_MODEL_PATH=./models/video-emotion
MODEL_CONFIDENCE_THRESHOLD=0.8

# Voice Processing
AUDIO_SAMPLE_RATE=16000
MAX_AUDIO_DURATION=60
VOICE_QUALITY=high

# Storage Settings
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=audio/wav,audio/mpeg,audio/webm,video/webm,video/mp4

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# Analytics Settings
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30
PERFORMANCE_MONITORING=true

# Admin Dashboard
ADMIN_EMAILS=admin@yourdomain.com
ENABLE_ADMIN_NOTIFICATIONS=true
ADMIN_SESSION_TIMEOUT=1h

# Feature Flags
ENABLE_VOICE_MIMICRY=true
ENABLE_VIDEO_ANALYSIS=true
ENABLE_EMERGENCY_OVERRIDE=true
ENABLE_USER_CUSTOMIZATION=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1000
ERROR_THRESHOLD=5
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true

# Cleanup Settings
TEMP_FILE_TTL=24h
LOG_ROTATION_INTERVAL=1d
SESSION_CLEANUP_INTERVAL=1h

# Development Settings (Remove in production)
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGGING=true
DISABLE_RATE_LIMIT=false
